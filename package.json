{
  "name": "postcss-stats",
  "version": "0.0.0-development",
  "description": "A PostCSS plugin to display stats",
  "keywords": [
    "css",
    "cssstats",
    "postcss",
    "postcss-plugin",
    "stats"
  ],
  "homepage": "https://github.com/buz-zard/postcss-stats#readme",
  "bugs": {
    "url": "https://github.com/buz-zard/postcss-stats/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buz-zard/postcss-stats.git"
  },
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src --out-dir lib --source-maps",
    "clean": "rimraf lib",
    "develop": "npm run build -- --watch",
    "format": "prettier --write '**/*.*' && sort-package-json",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint *.md -i node_modules",
    "qa": "run-p lint test",
    "semantic-release": "semantic-release",
    "test": "jest",
    "travis-deploy-once": "travis-deploy-once",
    "upgrade-interactive": "npm-check --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run qa"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "testRegex": "src/.+\\.test\\.js$"
  },
  "dependencies": {
    "brotli-size": "0.0.3",
    "chalk": "^2.4.1",
    "cli-table": "^0.3.1",
    "cssstats": "^3.2.0",
    "gzip-size": "^5.1.0",
    "postcss": "^7.0.0",
    "pretty-bytes": "^5.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "@k.sh/eslint-config": "^1.5.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "markdownlint-cli": "^0.15.0",
    "npm-check": "^5.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-replace": "^1.0.3",
    "pretty-quick": "^1.8.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.12.5",
    "sort-package-json": "^1.17.0",
    "travis-deploy-once": "^5.0.9"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json,babelrc}": [
      "pretty-quick --staged"
    ]
  }
}
