{
  "name": "postcss-stats",
  "version": "1.1.0",
  "description": "A PostCSS plugin to display stats",
  "keywords": [
    "css",
    "cssstats",
    "postcss",
    "postcss-plugin",
    "stats"
  ],
  "homepage": "https://github.com/karolis-sh/postcss-stats#readme",
  "bugs": {
    "url": "https://github.com/karolis-sh/postcss-stats/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karolis-sh/postcss-stats.git"
  },
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "main": "lib/index.js",
  "scripts": {
    "develop": "npm run build -- --watch",
    "format": "prettier --write '**/*.*' && sort-package-json",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint *.md -i node_modules",
    "qa": "run-p lint test",
    "prerelease": "git checkout master && git pull && npm i",
    "release": "npm run qa && standard-version && git push --follow-tags && npm publish",
    "test": "jest",
    "upgrade-interactive": "npm-check --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run qa"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "pretty-quick --staged"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "brotli-size": "0.1.0",
    "chalk": "^2.4.1",
    "cli-table": "^0.3.1",
    "cssstats": "^3.4.0",
    "gzip-size": "^5.1.1",
    "postcss": "^7.0.18",
    "pretty-bytes": "^5.3.0"
  },
  "devDependencies": {
    "@k.sh/eslint-config": "^1.14.3",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.1.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "markdownlint-cli": "^0.22.0",
    "npm-check": "^5.9.2",
    "npm-run-all": "^4.1.5",
    "postcss-replace": "^1.1.2",
    "pretty-quick": "^2.0.1",
    "sort-package-json": "^1.41.0",
    "standard-version": "^8.0.1"
  }
}
